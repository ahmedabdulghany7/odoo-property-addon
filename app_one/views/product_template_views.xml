<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="real_estate_product_list" model="ir.ui.view">
            <field name="name">real.estate.product.list</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <list string="Real Estate Products">
                    <field name="name"/>
                    <field name="project_location"/>
                    <field name="type"/>
                    <field name="unit_area"/>
                    <field name="total_cash_price"/>
                </list>
            </field>
        </record>

        <record id="product_template_form_view_real_estate" model="ir.ui.view">
            <field name="name">product.template.form.real.estate</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_general']" position="inside">
                    <group string="Real Estate Information" colspan="4">
                        <group string="Project / Location">
                            <field name="project_location"/>
                            <field name="type"/>
                        </group>
                        <group string="Building Information">
                            <field name="building_no"/>
                            <field name="unit_no"/>
                        </group>
                    </group>

                    <group colspan="4">
                        <group string="Area Information">
                            <field name="unit_area"/>
                            <field name="total_building_area"/>
                        </group>
                        <group string="Location Details">
                            <field name="unit_location"/>
                        </group>
                    </group>

                    <group colspan="4">
                        <group string="Cash Pricing">
                            <field name="cash_meter_price"/>
                            <field name="total_cash_price"/>
                        </group>
                        <group string="Installment Pricing">
                            <field name="installment_meter_price"/>
                            <field name="total_installment_price"/>
                        </group>
                    </group>

                    <group string="Amenities" colspan="4">
                        <group>
                            <field name="garage_yes_no"/>
                            <field name="club_house"/>
                            <field name="garden_yes_no"/>
                        </group>
                        <group>
                            <field name="garden_area_bool"/>
                            <field name="roof_area"/>
                        </group>
                    </group>

                    <group string="Unit Description" colspan="4">
                        <field name="unit_description" nolabel="1"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="real_estate_products_action" model="ir.actions.act_window">
            <field name="name">Real Estate Products</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="real_estate_product_list"/>
        </record>

        <menuitem id="menu_real_estate_root"
                  name="Real Estate"
                  sequence="10"/>

        <menuitem id="menu_real_estate_products"
                  name="Products"
                  parent="menu_real_estate_root"
                  action="real_estate_products_action"
                  sequence="1"/>
    </data>
</odoo>
